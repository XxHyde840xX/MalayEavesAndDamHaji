<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>NSTRDamHaji</defName>
    <label>Dam Haji</label>
    <description>A Malay board game that is quite similar to chess, games can last anywhere from half an hour to many hours.</description>
    <graphicData>
      <texPath>Things/Building/Joy/NSTRDamHaji/NSTRDamHaji</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
			      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.65, 0.25, 0.6)</volume>
        <offset>(0, 0, -0.15)</offset>
      </shadowData>
      <damageData>
        <rect>(0.09375,0.296875,0.796875,0.703125)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <minTechLevelToBuild>Medieval</minTechLevelToBuild>
    <building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>4</Beauty>
      <JoyGainFactor>1</JoyGainFactor>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <pathCost>30</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>Misc2</designationHotKey>
  </ThingDef>
  
  <JoyGiverDef>
    <defName>Play_DamHaji</defName>
    <giverClass>JoyGiver_InteractBuildingSitAdjacent</giverClass>
    <baseChance>2</baseChance>
    <thingDefs>
      <li>NSTRDamHaji</li>
    </thingDefs>
    <jobDef>Play_DamHaji</jobDef>
    <joyKind>Gaming_Cerebral</joyKind>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </JoyGiverDef>
  
   <JobDef>
    <defName>Play_DamHaji</defName>
    <driverClass>JobDriver_SitFacingBuilding</driverClass>
    <reportString>Playing Dam Haji.</reportString>
    <joyDuration>4000</joyDuration>
    <joyMaxParticipants>2</joyMaxParticipants>
    <joySkill>Intellectual</joySkill>
    <joyXpPerTick>0.002</joyXpPerTick>
    <joyKind>Gaming_Cerebral</joyKind>
    <taleOnCompletion>PlayedGame</taleOnCompletion>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

</Defs>
